{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "checkJs": false,
    "jsx": "react",
    "lib": ["ES2015", "DOM"],
    "module": "ESNext",
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "src",
    "declarationDir": "dist",
    "paths": {
      "@minimaui/icon": ["src/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.stories.ts",
    "./src/**/*.stories.tsx",
    "./src/**/*.stories.mdx"
  ]
}
