{
  "name": "minimaui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "build": "yarn workspaces foreach -tv run build",
    "test": "yarn workspaces foreach -tv run test",
    "typecheck": "yarn workspaces foreach -tv run typecheck || true",
    "lint": "yarn workspaces foreach -tv run lint || true",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "storybook": "storybook dev -p 6005 -c ./.storybook",
    "storybook:build": "storybook build -c ./.storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/testing-library": "^0.2.2",
    "storybook": "^8.3.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
