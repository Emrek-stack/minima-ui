{
  "name": "minimaui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "build": "yarn workspaces foreach -tv run build",
    "test": "yarn workspaces foreach -tv run test",
    "typecheck": "yarn workspaces foreach -tv run typecheck || true",
    "lint": "yarn workspaces foreach -tv run lint || true",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "release:local": "node ./scripts/release-local.js",
    "publish:workspaces": "yarn workspaces foreach --no-private -tv exec npm publish --access public",
    "storybook": "yarn workspace @minimaui/ui build:css && storybook dev -p 6005 -c ./.storybook",
    "storybook:build": "yarn workspace @minimaui/ui build:css && storybook build -c ./.storybook",
    "release:npm": "node ./scripts/release-npm.js",
    "release:npm:minor": "node ./scripts/release-npm.js --bump minor",
    "release:npm:patch": "node ./scripts/release-npm.js --bump patch",
    "release:npm:major": "node ./scripts/release-npm.js --bump major",
    "release:yarn": "node ./scripts/release-yarn.js",
    "release:yarn:minor": "node ./scripts/release-yarn.js --bump minor",
    "release:yarn:patch": "node ./scripts/release-yarn.js --bump patch",
    "release:yarn:major": "node ./scripts/release-yarn.js --bump major",
    "update-deps": "node ./scripts/update-dependencies.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/testing-library": "^0.2.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.3.5",
    "tailwindcss": "^3.4.3",
    "vite": "^5.4.14"
  },
  "version": "0.1.0"
}
